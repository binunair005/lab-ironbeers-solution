<div class="cards">
  <div class="card">
    <img src="{{beer.image_url}}" />
    <h2>{{beer.name}}</h2>
    <h3>{{beer.tagline}}</h3>
    <p>{{beer.description}}</p>
    <h3>Food pairing</h3>
    <ul>
      {{#each beer.food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
</div>